{% extends 'base.html.twig' %}

{% block body %}
	<div class="persoPaddingBlock"></div>
	<div class="container persoWhiteBlock rounded">

		<div class="row d-flex justify-content-center">
			<div>
				<h3 class="text-center">Add File</h3>

                {{ form_start(form, { 'attr': {'class': 'font-italic'} }) }}
				<div class="form-group">
					{{ form_widget(form.file, { 'attr': {'class': 'form-control','placeholder':''} })}}
				</div>
				<div class="text-right">
                    {{ form_row(form.save, { 'attr': {'class': 'form-control btn btn-primary btn-sm btn-block'} })}}
				</div>
                {{ form_end(form) }}

				<p>{{errorMessage}}</p>
			</div>
		</div>
	</div>
{% endblock %}
