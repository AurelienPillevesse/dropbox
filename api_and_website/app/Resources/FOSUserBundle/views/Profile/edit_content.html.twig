{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}

{% block body %}




    <div class="persoPaddingBlock"></div>
    <div class="container persoWhiteBlock rounded">

        <div class="row d-flex justify-content-center">
            <div style="min-width: 300px;">
                <h3 class="text-center" style="margin-bottom: 25px;">Edit profile</h3>

                {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                    <div class="form-group">
                        {{ form_widget(form.username, { 'attr': {'class': 'form-control','placeholder':''} })}}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control','placeholder':''} })}}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.current_password, { 'attr': {'class': 'form-control font-italic','placeholder':'Your password'} })}}
                    </div>
                    <div>
                        <input class="btn btn-primary btn-sm btn-block" type="submit" value="Save" />
                    </div>
                    <div style="color: red">
                        {{ form_errors(form.username) }}
                        {{ form_errors(form.email) }}
                        {{ form_errors(form.current_password) }}
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>





{% endblock %}